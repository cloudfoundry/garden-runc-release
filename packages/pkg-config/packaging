#!/usr/bin/env bash
set -euo pipefail

version="0.29"
export PATH="${BOSH_INSTALL_TARGET}/bin:${PATH}"

# pkg-config
tar xzf "pkg-config/pkg-config-${version}.tar.gz"

cd "pkg-config-${version}"

./configure "--prefix=${BOSH_INSTALL_TARGET}" --with-internal-glib
make
make install "prefix=${BOSH_INSTALL_TARGET}"
